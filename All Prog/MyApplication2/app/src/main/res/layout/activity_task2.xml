        <ImageView
            android:id="@+id/img9"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt8"
            android:src="@drawable/farmfresh" />

        <TextView
            android:id="@+id/txt9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img9"
            android:layout_margin="25dp"
            android:text="Farm Fresh pizza"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt9"
            android:src="@drawable/fries" />

        <TextView
            android:id="@+id/txt10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img10"
            android:layout_margin="25dp"
            android:text="Fries"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>
