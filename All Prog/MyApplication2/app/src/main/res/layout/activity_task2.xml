<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E5E5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="Food Hub"
            android:gravity="center"
            android:textColor="#8E0707"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt"
            android:src="@drawable/cheesee" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img1"
            android:layout_margin="25dp"
            android:text="Double cheese margerita"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt1"
            android:src="@drawable/sandwhich2" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_margin="25dp"
            android:text="Vegetable Grilled sandwich"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt2"
            android:src="@drawable/sandwich1" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img3"
            android:layout_margin="25dp"
            android:text="Mexicana Grilled sandwich"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt3"
            android:src="@drawable/vegburger" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img4"
            android:layout_margin="25dp"
            android:text="Veg burger"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt4"
            android:src="@drawable/vegmakhani" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img5"
            android:layout_margin="25dp"
            android:text="Veg makhani burger"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt5"
            android:src="@drawable/volcano" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img6"
            android:layout_margin="25dp"
            android:text="Volcano Pizza"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/txt6"
            android:src="@drawable/pizzaaaaa" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img7"
            android:layout_margin="25dp"
            android:text="Authentic veg pizza"
            android:gravity="center"
            android:textColor="#0E99D7"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="match_parent"
