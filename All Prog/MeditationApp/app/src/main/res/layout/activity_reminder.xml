<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:id="@+id/main"
    android:background="@android:color/white"
    tools:context=".Activity.ReminderActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time would you like to meditate?"
        android:textSize="22sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvTimeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any time you can choose but we recommend\nfirst thing in the morning."
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp" />

    <!-- TimePicker -->
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:timePickerMode="spinner"
        />

    <!-- Day Title -->
    <TextView
        android:id="@+id/tvDayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which day would you like to meditate?"
        android:textSize="22sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="32dp" />

    <!-- Day Subtitle -->
    <TextView
        android:id="@+id/tvDaySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyday is best, but we recommend picking at least five."
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="8dp" />

    <!-- Days Row -->
    <LinearLayout
        android:id="@+id/dayButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="7">

        <!-- Days Buttons will be added dynamically -->

    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SAVE"
        android:textAllCaps="true"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#8A8CFF"
        android:background="@drawable/rounded_button" />

    <!-- No Thanks -->
    <TextView
        android:id="@+id/tvNoThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO THANKS"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />
</LinearLayout>
</ScrollView>
