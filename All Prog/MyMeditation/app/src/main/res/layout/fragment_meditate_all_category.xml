<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameAllCategoryFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragment.MeditateAllCategoryFragment">
    <!-- Daily Calm Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/daily_calm"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_9sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_calm"
                android:textColor="#3F414E"
                android:fontFamily="@font/helvetica_neue_medium"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/apr_30_pause_practice"
                android:fontFamily="@font/helvetica_neue_medium"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#5A6175"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="1"
            android:id="@+id/btnPlayDailyThought"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/play_image"
            android:src="@drawable/play_dark"
            android:layout_marginStart="@dimen/_78sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStaggeredGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_90sdp"/>

    </LinearLayout>

</FrameLayout>