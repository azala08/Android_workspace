<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logout_bg"
    tools:context=".fragment.UserFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_24sdp"
        android:padding="@dimen/_24sdp"
        android:backgroundTint="@android:color/transparent"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/logut_avtar"
                android:background="@color/white"
                app:shapeAppearanceOverlay="@style/RoundImageViewShape"
                />


            <TextView
                android:id="@+id/tvLogoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/aditi"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica_neue_medium" />

            <TextView
                android:id="@+id/tvLogoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/aditi_gmail_com"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica_neue_medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/f6f1fb"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="@dimen/_20sdp"
                app:iconTint="@color/f6f1fb"
                android:backgroundTint="@color/purple"
                android:fontFamily="@font/helvetica_neue_medium" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
