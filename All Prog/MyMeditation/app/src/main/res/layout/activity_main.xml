<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/lytLinearFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <!-- Top Banner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/frame">

            <!-- Logo -->
            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/tvsilent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/silent"
                    android:textColor="#3F414E"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    />

                <ImageView
                    android:id="@+id/ivSilent_moon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/welcome_image"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tvmoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/moon"
                    android:textColor="#3F414E"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Girl Illustration -->
            <ImageView
                android:id="@+id/ivGirl"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_220sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar"
                android:scaleType="fitCenter"
                android:contentDescription="@string/welcome_image" />
        </RelativeLayout>

        <!-- Heading -->
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading"
            android:textColor="#3F414E"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textStyle="bold"
            android:textSize="@dimen/_24ssp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_8sdp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textColor="#B0B0C3"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:fontFamily="@font/helvetica_neue_light"
            android:lineSpacingExtra="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_35sdp" />

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="@string/signup"
            android:textSize="@dimen/_10ssp"

            android:fontFamily="@font/helvetica_neue_medium"
            android:backgroundTint="#8D8DFE"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <!-- Already have account? Log In -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAlreadyacc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_acc"
                android:textColor="#B0B0C3"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"/>

            <TextView
                android:id="@+id/tvLoginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#8D8DFE"
                android:textStyle="bold"
                android:textSize="@dimen/_10ssp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
