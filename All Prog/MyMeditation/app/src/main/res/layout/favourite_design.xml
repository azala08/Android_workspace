<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >  <!-- Changed to vertical to allow divider below -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/imgFavouritePlayIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/music_icon"
            android:src="@drawable/music" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_16sdp">

            <TextView
                android:id="@+id/tvFavouriteMusictitle"
                android:text="@string/focus_attention"
                android:textStyle="bold"
                android:textColor="#3F414E"
                android:layout_gravity="center"
                android:fontFamily="@font/helvetica_neue_medium"
                android:textSize="@dimen/_13ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/imgFavouriteCancle"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:contentDescription="@string/cancleimage"
            android:src="@drawable/cancle"
            android:layout_marginEnd="@dimen/_10sdp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/view"
        android:src="@drawable/view"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"/>
</LinearLayout>