<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">  <!-- Changed to vertical to allow divider below -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_16sdp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/playIcon"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:contentDescription="@string/music_icon"
            android:src="@drawable/play_dark" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp">

            <TextView
                android:id="@+id/tvMusictitle"
                android:text="@string/focus_attention"

                android:textColor="#3F414E"
                android:fontFamily="@font/helvetica_neue_medium"
                android:textSize="@dimen/_13ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/duration"
                android:text="@string/_10_min"
                android:textSize="@dimen/_10ssp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/helvetica_neue_medium"
                android:layout_height="wrap_content"
                android:textColor="#A1A4B2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider line -->
    <ImageView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/view"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"/><!-- light grey -->
</LinearLayout>
