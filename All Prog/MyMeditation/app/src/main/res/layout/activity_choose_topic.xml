<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/chooseTopicmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.ChooseTopicActivity"
        android:orientation="vertical">

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whats"
                android:textSize="@dimen/_20ssp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:textStyle="bold"
                android:textColor="@color/text" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/union">

            <TextView
                android:id="@+id/tvMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_silent"
                android:layout_marginTop="-7dp"
                android:textSize="@dimen/_19ssp"
                android:fontFamily="@font/helvetica_neue_light"
                android:textColor="@color/text"
                android:layout_marginStart="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topic"
                android:layout_below="@+id/tvMoon"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="@dimen/_14ssp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/text2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topicRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvTopic"
                android:layout_margin="@dimen/_7sdp"
               />
        </RelativeLayout>
    </LinearLayout>
